{
  "entryFile": "src/app.ts",
  "noImplicitAdditionalProperties": "throw-on-extras",
  "controllerPathGlobs": ["src/modules/**/*Controller.ts"],
  "typeFileNameGlobs": ["src/modules/**/*.ts"],
  "spec": {
    "outputDirectory": "public",
    "specVersion": 3,
    "securityDefinitions": {
      "bearerAuth": {
        "type": "apiKey",
        "name": "Authorization",
        "in": "header"
      }
    },
    "security": [
      {
        "bearerAuth": []
      }
    ]
  },
  "routes": {
    "routesDir": "src/modules",
    "middleware": "authMiddleware"
  }
}
